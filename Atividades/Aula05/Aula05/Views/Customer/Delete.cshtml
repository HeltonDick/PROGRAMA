@model Modelo.Customer;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Apagando consumidor</h1>

        <div class="row">
            <div class="col-6">
                Name
            </div>
            <div class="col-6">
                @Model.Name
            </div>
        </div>

        <div class="row">
            <a asp-action="Index" class="btn-danger" asp-controller="Customer">Validar</a>
        </div>

        <div class="col">
            <div class="col-12">
            <form method="post" asp-action="Delete" asp-controller="Customer">
                <input type="hidden" name="id" value="@Model.Id"/>
                <button class="btn btn-primary">Excluir</button>
            </form>
            </div>
        </div>

        <a asp-action="Index" asp-controller="Customer" class="btn-danger">
            Voltar
        </a>
</div>