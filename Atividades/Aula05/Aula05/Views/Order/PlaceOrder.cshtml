@model Aula05.ViewModels.OrderViewModels;

@{
    ViewData["Titulo"] = "Realizar um Pedido";
}

<div class="text-center">
    <h1>Realizar um Pedido</h1>

    <div class="container">

        <form id="formOrder" method="post" asp-action="Create" asp-controller="Order">

            <input type="hidden" name="id"
                   value="@Model.Name" />

            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.Name">Cliente:</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" />
                </div>
            </div>

            @if (Model.Count > 0) {
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Item</th>
                        <th>qtd</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Modelo.Order order in Model)
                        {
                    <tr>
                        <td>@order.Item</td>
                        <td>@order.Quantity</td>
                        <td>@order.Value.ToString("C")</td>
                    </tr>
                        }
                </tbody>
            </table>
            }
            else {
                <div>
                    Não existem registros de pedidos.
                </div>
            }

        <button style="margin-bottom: 10px" id="btnCustomer"
                type="submit"
                class="btn btn-primary"
                value="Cadastrar">
            Salvar Pedido
        </button>

        </form>
    </div>
</div>
