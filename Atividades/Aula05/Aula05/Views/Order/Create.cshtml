@model Aula05.ViewModels.OrderViewModels;
@model Modelo.Order;

@{
    ViewData["Titulo"] = "Criar Order";
}

<div class="text-center">
    <h1>Cadastro de Pedido</h1>

    <div class="container">

        <form id="formOrder" method="post"
        asp-action="Create"
        asp-controller="Order">

            <div class="row">
                <div class="form-group">
                    <label asp-for="@Model.CustomerID">Nome:</label>
                    <select asp-for="@Model.CustomerID" >
                        @foreach(var c in Model.Customers)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row">

            </div>

            <button style="margin-bottom: 10px" id="btnCustomer"
                    type="submit"
                    class="btn btn-primary"
                    value="Cadastrar">
                Cadastrar
            </button>

        </form>

    </div>
</div>
